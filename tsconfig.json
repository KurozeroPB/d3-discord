{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": false,
        "noImplicitReturns": false,
        "resolveJsonModule": true,
        "declaration": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "@types"],
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"],
            "@/*": ["*"]
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist", "testing"]
}
